<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddhant.loginui.MainActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/ownerregistration"
            app:srcCompat="@drawable/ownerregistration" />

        <EditText
            android:id="@+id/ownwename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="16dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Owner Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Agencyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="25dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Agency Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Agencyaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="25dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Agency Address"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/Agencyphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="25dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Agency Phone"
            android:inputType="textPersonName" />



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"
            android:background="@drawable/agencydocument"
            app:srcCompat="@drawable/agencydocument" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="193dp"
                android:layout_height="84dp"
                android:layout_gravity="center"

                android:layout_marginTop="25dp"

                android:text="Register Certificate" />

            <Button
                android:id="@+id/button13"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:text="upload" />

        </FrameLayout>




        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:background="@drawable/vehicle"
            app:srcCompat="@drawable/vehicle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/vehicle"
                android:layout_width="202dp"
                android:layout_height="96dp"
                android:layout_gravity="center"

                android:layout_marginTop="25dp"
                android:background="@drawable/rect1"
                android:ems="10"
                android:gravity="left"
                android:hint="No of vehicle"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button14"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:text="Add" />
        </FrameLayout>



    </LinearLayout>
</ScrollView>