<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/villacard"
    android:layout_width="wrap_content"
    android:layout_height="320dp"
    app:cardElevation="3dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:weightSum="5.5">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="textview"
            android:textSize="10sp"
            android:visibility="invisible"></TextView>

        <ImageView
            android:id="@+id/villaimg"
            android:layout_width="450dp"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:scaleType="centerCrop"
            android:src="@drawable/villaimg"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/villaname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-black"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:text="Tajmahal"
                    android:textSize="15sp"></TextView>


                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/customRatingBar"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:isIndicator="true"
                    android:max="5"
                    android:padding="20dip"
                    android:rating="4"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:stepSize=".1"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ruppes" />

                    <TextView
                        android:id="@+id/villaprice"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="1500000"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"></TextView>

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="27dp"
                        android:text="Per night"
                        android:textColor="#289ca8"
                        android:textStyle="bold"/>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
