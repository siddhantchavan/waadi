<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddhant.loginui.MainActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/registrationform"
            app:srcCompat="@drawable/registrationform" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon1"
            app:srcCompat="@drawable/icon1" />

        <Button
            android:id="@+id/photo1"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/chooesphoto" />

        <Button
            android:id="@+id/photo"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:background="@drawable/uploadphoto"

            app:srcCompat="@drawable/uploadphoto" />




        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:background="@drawable/text"
            app:srcCompat="@drawable/text" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="16dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="16dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="16dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Mobile no"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button4"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"

            android:background="@drawable/file1" />


        <Button
            android:id="@+id/button2"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"

            android:background="@drawable/rto" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:background="@drawable/vehicle"
            app:srcCompat="@drawable/vehicle" />

        <EditText
            android:id="@+id/rtobranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="16dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="RTO branch"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/rtoaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="16dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="RTO Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dateofregistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="16dp"
            android:background="@drawable/rect1"
            android:ems="10"
            android:gravity="left"
            android:hint="Date Of Registration"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button5"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"

            android:background="@drawable/file1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"

            android:background="@drawable/rtoverification" />


        <Button
            android:id="@+id/Register"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"

            android:background="@drawable/register" />


    </LinearLayout>


</ScrollView>