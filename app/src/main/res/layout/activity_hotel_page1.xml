<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotelPage1">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#00B8D4"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Body1">


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Search Hotel"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24" />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/go_hotel"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:background="@drawable/bgsearch"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:fontFamily="sans-serif"
        android:text="Search"
        android:textSize="20dp"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginTop="5dp"
        android:divider="@color/colorAccent"
        android:dividerHeight="0.0px"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">


        <AutoCompleteTextView
            android:id="@+id/hdestination"
            android:layout_width="330dp"
            android:layout_height="67dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:background="@drawable/destination"
            android:ems="9"
            android:hint="Destination"
            android:inputType="textPersonName"
            android:paddingLeft="70dp"
            android:paddingRight="10dp"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="169dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="120dp"
            android:text="Near by"
            android:textSize="18dp"></TextView>

        <Spinner
            android:id="@+id/nearbySpinner"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="82dp"
            android:scrollbarSize="10dp" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>