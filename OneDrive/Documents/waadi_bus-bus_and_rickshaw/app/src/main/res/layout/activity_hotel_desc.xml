<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    tools:srcCompat="@drawable/ic_keyboard_arrow_left_24px" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp">

            </androidx.viewpager.widget.ViewPager>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:padding="10dip"
                app:centered="true"
                app:fillColor="#df0623"
                app:pageColor="#fff"
                app:snap="false" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#43F0DAC5"
                app:cardCornerRadius="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/hname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="FabExpress Marol Metro"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:layout_marginTop="10dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="Location,India"
                            android:textColor="@android:color/black"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="05dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/ic_location_on_black_24dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="58dp">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="99dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:filterTouchesWhenObscured="true"
                            android:fitsSystemWindows="false"
                            android:focusableInTouchMode="false"
                            android:foregroundGravity="fill_horizontal"
                            android:indeterminate="false"
                            android:isIndicator="true"
                            android:max="5"
                            android:numStars="5"
                            android:padding="9dip"
                            android:progress="2"
                            android:rating="3.25"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:stepSize="0.1"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textView46"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="Rating"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </FrameLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#43F0DAC5"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Amenities"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/wifilogo"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/wifi_light"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/wifitxt"
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:maxLines="1"
                            android:text="Wifi in lobby"
                            android:textColor="#6B000000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/wifiroom"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/wifi"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/wifiroomtxt"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:maxLines="1"
                            android:text="Wifi in rooms"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/wifipool"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/pool"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/wifipooltxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Pool"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/spa"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/spa"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/spatxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Spa"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/parking"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/parking"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/parkingtxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Parking"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pets"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/pets"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/petstxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Pets"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ac"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/ac"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/actxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="A/C"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/restaurant"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/restaurant"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/restauranttxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Restaurant"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hotelbar"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/bar"
                            android:fontFamily="@font/alike"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/hotelbartxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Hotelbar"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gym"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/gym"
                            android:fontFamily="@font/alike"
                            android:paddingBottom="5dp"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gymtxt"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="sans-serif-thin"
                            android:paddingBottom="5dp"
                            android:text="Gym"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </GridLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#43F0DAC5"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Description"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="321dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:inputType="textMultiLine"
                            android:maxEms="15"
                            android:singleLine="false"
                            android:text="TextView"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/moreDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="0dp"
                    android:text="Read more.."
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#43F0DAC5"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/commentsTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Comments"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentsList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

